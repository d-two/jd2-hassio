#!/usr/bin/env bash

set +u
echo "variables (see https://docs.docker.com/docker-hub/builds/advanced/):"
echo "SOURCE_BRANCH:   $SOURCE_BRANCH"
echo "SOURCE_COMMIT:   $SOURCE_COMMIT"
echo "COMMIT_MSG:      $COMMIT_MSG"
echo "DOCKER_REPO:     $DOCKER_REPO"
echo "DOCKERFILE_PATH: ${DOCKERFILE_PATH:=./Dockerfile}"
echo "CACHE_TAG:       $CACHE_TAG"
echo "IMAGE_NAME:      $IMAGE_NAME"

# =>
# https://hub.docker.com/u/arm64v8/
# https://hub.docker.com/u/arm32v7/
# https://hub.docker.com/u/arm32v6/
# https://hub.docker.com/u/i386/

declare -A base_image_prefix_map=(["arm32v5"]="arm32v5/" ["arm32v6"]="arm32v6/" ["arm32v7"]="arm32v7/" ["arm64v8"]="arm64v8/" ["amd64"]="" ["i386"]="i386/")

# => https://github.com/docker/docker-ce/blob/76ac3a4952a9c03f04f26fc88d3160acd51d1702/components/cli/cli/command/manifest/util.go#L22
declare -A docker_to_manifest_arch_map=(["arm32v6"]="arm" ["arm32v7"]="arm" ["arm64v8"]="arm64" ["amd64"]="amd64" ["i386"]="386")

declare -A docker_to_manifest_variant_map=(["arm32v6"]="v6" ["arm32v7"]="v7" ["arm64v8"]="v8" ["amd64"]="" ["i386"]="")

declare -A docker_arch_map=(["arm32v6"]="arm" ["arm32v7"]="arm" ["arm64v8"]="aarch64" ["amd64"]="amd64" ["i386"]="x86")

declare -A s6_overlay_arch_map=(["arm32v6"]="armhf" ["arm32v7"]="arm" ["arm64v8"]="aarch64" ["amd64"]="amd64" ["i386"]="x86")

declare -A tempio_arch_map=(["arm32v6"]="armhf" ["arm32v7"]="armv7" ["arm64v8"]="aarch64" ["amd64"]="amd64" ["i386"]="i386")

# what we want to build
build_architectures=(arm32v7 arm64v8 amd64)
set -u
